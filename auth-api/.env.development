# Database Configuration
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db?schema=public
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password
POSTGRES_DB=auth_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production
JWT_EXPIRES_IN=1h
JWT_ISSUER=auth-service
JWT_AUDIENCE=api-services

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672/

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=1

# Mail Configuration (Development)
MAIL_HOST=smtp.ethereal.email
MAIL_PORT=587
MAIL_USER=your-ethereal-user
MAIL_PASSWORD=your-ethereal-password
MAIL_FROM=noreply@yourapp.com

# Password Reset
PASSWORD_RESET_EXPIRES_IN=15m

# CORS Origins (Development)
CORS_ORIGINS=http://localhost:3002,http://localhost:3000,http://localhost:3001
